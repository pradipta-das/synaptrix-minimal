{
  "sections": {
    "main": {
      "type": "main-product",
      "blocks": [
        {
          "type": "vendor",
          "settings": {
            "text_style": "uppercase",
            "text_size": "caption-with-letter-spacing"
          }
        },
        {
          "type": "title",
          "settings": {
            "heading_size": "h1"
          }
        },
        {
          "type": "price",
          "settings": {
            "show_badges": true,
            "price_class": "price--large"
          }
        },
        {
          "type": "variant_picker",
          "settings": {
            "picker_type": "button",
            "swatch_shape": "circle"
          }
        },
        {
          "type": "quantity_selector",
          "settings": {
            "max_quantity": 99
          }
        },
        {
          "type": "buy_buttons",
          "settings": {
            "show_dynamic_checkout": true,
            "show_gift_card_recipient": true
          }
        },
        {
          "type": "share",
          "settings": {
            "share_label": "Share this product",
            "featured_image_info": "Share {{ product.title }}",
            "title_info": "{{ product.title }}",
            "text_info": "{{ product.description | strip_html | truncatewords: 25 }}"
          }
        },
        {
          "type": "description",
          "settings": {
            "text_style": "body"
          }
        }
      ],
      "settings": {
        "enable_sticky_info": true,
        "color_scheme": "background-1",
        "media_size": "large",
        "constrain_to_viewport": true,
        "media_fit": "contain",
        "gallery_layout": "stacked",
        "media_position": "left",
        "image_zoom": "hover",
        "mobile_thumbnails": "hide",
        "hide_variants": true,
        "enable_video_looping": false,
        "padding_top": 36,
        "padding_bottom": 12
      }
    },
    "product-recommendations": {
      "type": "product-recommendations",
      "settings": {
        "heading": "You may also like",
        "heading_size": "h2",
        "products_to_show": 4,
        "columns_desktop": 4,
        "color_scheme": "background-1",
        "image_ratio": "square",
        "image_shape": "default",
        "show_secondary_image": true,
        "show_vendor": false,
        "show_rating": true,
        "columns_mobile": "2",
        "padding_top": 36,
        "padding_bottom": 28
      }
    },
    "product-reviews": {
      "type": "product-reviews",
      "settings": {
        "heading": "Customer Reviews",
        "heading_size": "h2",
        "show_rating_histogram": true,
        "show_review_form": true,
        "color_scheme": "background-1",
        "padding_top": 36,
        "padding_bottom": 28
      }
    },
    "recently-viewed": {
      "type": "recently-viewed-products",
      "settings": {
        "heading": "Recently viewed",
        "heading_size": "h2",
        "products_to_show": 4,
        "columns_desktop": 4,
        "color_scheme": "background-1",
        "image_ratio": "square",
        "image_shape": "default",
        "show_secondary_image": true,
        "show_vendor": false,
        "show_rating": true,
        "columns_mobile": "2",
        "padding_top": 36,
        "padding_bottom": 28
      }
    }
  },
  "order": [
    "main",
    "product-recommendations",
    "product-reviews",
    "recently-viewed"
  ]
}